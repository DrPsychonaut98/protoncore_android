<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_norm"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/planListRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/gap_large_plus"
        android:overScrollMode="never" />

    <TextView
        android:id="@+id/manageSubscriptionText"
        style="@style/Proton.Text.Caption.Weak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_large_plus"
        android:drawablePadding="@dimen/gap_medium"
        android:maxLines="2"
        android:text="@string/plans_autorenew_subscriptions"
        app:drawableStartCompat="@drawable/ic_info_circle" />

    <Spinner
        android:id="@+id/currencySpinner"
        style="@style/ProtonSpinnerStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_large_plus"
        android:spinnerMode="dropdown"
        android:visibility="gone"
        tools:visibility="visible" />

</LinearLayout>

