<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/human_verification_parent_padding_horizontal"
    android:paddingTop="@dimen/human_verification_parent_padding_vertical"
    android:paddingEnd="@dimen/human_verification_parent_padding_horizontal"
    android:paddingBottom="@dimen/human_verification_captcha_vertical_margin">

    <me.proton.core.presentation.ui.webview.ProtonWebView
        android:id="@+id/captchaWebView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="true" />

    <!-- this should be replaced with a Proton loader animation -->
    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="3dp"
        android:indeterminate="true"
        android:indeterminateTint="?attr/brand_norm" />
</FrameLayout>
