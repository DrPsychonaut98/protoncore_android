<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:windowBackground"
        android:paddingStart="@dimen/human_verification_parent_padding_horizontal"
        android:paddingTop="@dimen/human_verification_parent_padding_vertical"
        android:paddingEnd="@dimen/human_verification_parent_padding_horizontal">

        <TextView
            android:id="@+id/title"
            style="@style/ProtonTextView.Subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/human_verification_option_sms_subtitle"
            app:layout_constraintBottom_toTopOf="@id/header"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/header"
            style="@style/ProtonTextView.InputHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/double_top_margin"
            android:text="@string/human_verification_option_sms"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <me.proton.core.presentation.ui.view.ProtonAutoCompleteInput
            android:id="@+id/callingCodeText"
            android:layout_width="@dimen/human_verification_calling_code_input_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/input_padding"
            android:inputType="none"
            app:layout_constraintEnd_toStartOf="@id/smsEditText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header" />

        <me.proton.core.presentation.ui.view.ProtonInput
            android:id="@+id/smsEditText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:hint="@string/sms_hint"
            android:inputType="text|phone"
            app:layout_constraintBottom_toBottomOf="@+id/callingCodeText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/callingCodeText"
            app:layout_constraintTop_toTopOf="@+id/callingCodeText" />

        <me.proton.core.presentation.ui.view.ProtonProgressButton
            android:id="@+id/getVerificationCodeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/human_verification_sms_action_button_top_margin"
            android:text="@string/human_verification_get_verification_code"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/smsEditText" />

        <me.proton.core.presentation.ui.view.ProtonProgressButton
            android:id="@+id/proceedButton"
            style="@style/ProtonButton.Borderless.Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/double_top_margin"
            android:text="@string/human_verification_already_have_code"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/getVerificationCodeButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
