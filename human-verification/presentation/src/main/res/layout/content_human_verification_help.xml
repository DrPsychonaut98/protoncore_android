<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="me.proton.android.core.presentation.ui.HumanVerificationDialog">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/headerNavigation"
            layout="@layout/content_human_verification_header_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_view_vertical_space"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/helpSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/double_top_margin"
            android:text="@string/human_verification_help_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headerNavigation"
            android:textColor="@color/dark_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/double_top_margin"
            android:paddingStart="@dimen/double_top_margin"
            android:paddingEnd="@dimen/double_top_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/helpSubtitle">

            <include
                layout="@layout/content_human_verification_help_manual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_view_vertical_space" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/dark_gray" />

            <include
                layout="@layout/content_human_verification_help_web"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/double_top_margin"
                android:layout_marginBottom="@dimen/default_view_vertical_space" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/dark_gray" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
