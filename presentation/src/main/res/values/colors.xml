<resources>

    <!-- brand colors -->
    <color name="brand">#657EE4</color>
    <color name="brand_darker_20">#5064B6</color>
    <color name="brand_darker_40">#3C4B88</color>
    <color name="brand_lighter_40">#A2B1EE</color>

    <!-- interaction colors -->
    <color name="interaction_default">@color/brand</color>
    <color name="interaction_pressed">@color/brand_darker_20</color>
    <color name="interaction_disabled">@color/brand_lighter_40</color>

    <color name="interaction_neutral">#727680</color>
    <color name="interaction_ripple">#55727680</color>
    <color name="interaction_neutral_pressed">#000000</color>
    <color name="interaction_neutral_disabled">#BABDC6</color>

    <!-- layout colors -->
    <color name="layout_dark">#000000</color>
    <color name="layout_secondary">#727680</color>
    <color name="layout_weak">#BABDC6</color>
    <color name="layout_lines">#EAECF1</color>
    <color name="layout_background">#F5F6FA</color>
    <color name="layout_light">#FFFFFF</color>

    <!-- text colors -->
    <color name="text_default">#262A33</color>
    <color name="text_secondary">#727680</color>
    <color name="text_weak">#BABDC6</color>
    <color name="text_light">#FFFFFF</color>

    <!-- icon colors -->
    <color name="icon_default">#000000</color>
    <color name="icon_secondary">#727680</color>
    <color name="icon_weak">#BABDC6</color>
    <color name="icon_light">#FFFFFF</color>

    <!-- signal colors -->
    <color name="signal_error">#E84118</color>
    <color name="signal_warning">#FBC531</color>
    <color name="signal_success">#44BD32</color>

    <!-- text section -->
    <color name="color_title">@color/text_default</color>
    <color name="color_subtitles">@color/text_secondary</color>

    <!-- proton buttons section -->
    <color name="button_action">@color/brand</color>
    <color name="button_action_pressed">@color/brand_darker_40</color>
    <color name="button_action_disabled">@color/brand_lighter_40</color>
    <color name="button_text">@android:color/transparent</color>
    <color name="button_text_pressed">@color/layout_background</color>
    <color name="button_text_disabled">@android:color/transparent</color>
    <color name="button_text_disabled_foreground">@color/interaction_neutral_disabled</color>

    <!-- proton input elements section -->
    <color name="input_border">@color/brand</color>
    <color name="input_background">@color/layout_background</color>
</resources>
