<resources>
    <!-- color palette -->
    <color name="transparent">#00000000</color>
    <color name="scrim">#C3000000</color>

    <color name="woodsmoke">#17181C</color>
    <color name="charade">#25272C</color>
    <color name="tuna">#303239</color>
    <color name="abbey">#494D55</color>
    <color name="storm_gray">#727680</color>
    <color name="santas_gray">#9CA0AA</color>
    <color name="french_gray">#BABDC6</color>
    <color name="mischka">#DADCE3</color>
    <color name="athens_gray">#EAECF1</color>
    <color name="whisper">#F5F6FA</color>
    <color name="white">#FFFFFF</color>

    <color name="chambray">#3C4B88</color>
    <color name="san_marino">#5064B6</color>
    <color name="cornflower_blue">#657EE4</color>
    <color name="portage">#8498E9</color>
    <color name="perano">#A2B1EE</color>

    <color name="green_pea">#2F6336</color>
    <color name="goblin">#3E8347</color>
    <color name="fruit_salad">#4DA358</color>
    <color name="mantis">#71B579</color>
    <color name="fern">#94C89B</color>

    <color name="pomegranate">#E84118</color>
    <color name="apple">#44BD32</color>
    <color name="sunglow">#FBC531</color>

    <color name="port_gore">#1c223d</color>
    <color name="pickled_bluewood">#29304d</color>
    <color name="rhino">#353e60</color>

    <!-- design color aliases -->

    <color name="shade_100">@color/woodsmoke</color>
    <color name="shade_80">@color/storm_gray</color>
    <color name="shade_60">@color/santas_gray</color>
    <color name="shade_50">@color/french_gray</color>
    <color name="shade_40">@color/mischka</color>
    <color name="shade_20">@color/athens_gray</color>
    <color name="shade_10">@color/whisper</color>
    <color name="shade_0">@color/white</color>

    <!-- colors to use in the app -->

    <color name="text_norm">@color/shade_100</color>
    <color name="text_weak">@color/shade_80</color>
    <color name="text_hint">@color/shade_60</color>
    <color name="text_disabled">@color/shade_50</color>
    <color name="text_inverted">@color/shade_0</color>

    <color name="icon_norm">@color/shade_100</color>
    <color name="icon_weak">@color/shade_80</color>
    <color name="icon_hint">@color/shade_60</color>
    <color name="icon_disabled">@color/shade_50</color>
    <color name="icon_inverted">@color/shade_0</color>

    <color name="interaction_weak">@color/shade_20</color>
    <color name="interaction_weak_pressed">@color/shade_40</color>
    <color name="interaction_weak_disabled">@color/shade_10</color>

    <color name="interaction_strong">@color/shade_100</color>
    <color name="interaction_strong_pressed">@color/shade_80</color>

    <!-- Defined in theme (e.g. proton_interaction_norm)
    <color name="interaction_norm">?attr/brand_norm</color>
    <color name="interaction_norm_pressed">?attr/brand_darken_20</color>
    <color name="interaction_norm_disabled">?attr/brand_lighten_40</color>
    -->
    <color name="background_norm">@color/shade_0</color>
    <color name="background_secondary">@color/shade_10</color>

    <color name="separator_norm">@color/shade_20</color>

    <color name="notification_norm">@color/shade_100</color>
    <color name="notification_error">@color/pomegranate</color>
    <color name="notification_success">@color/apple</color>
    <color name="notification_warning">@color/sunglow</color>

    <color name="blender_norm">#750C0C14</color>

    <!-- status & navigation bar color -->
    <color name="status_bar">@color/background_norm</color>
    <color name="nav_bar">@color/scrim</color>

    <!-- Navigation view colors -->
    <color name="nav_view_background">@color/woodsmoke</color>
    <color name="nav_view_section_header_text">@color/santas_gray</color>
    <color name="nav_view_item_text">@color/white</color>
    <color name="nav_view_item_icon">@color/white</color>
    <color name="nav_view_divider">@color/tuna</color>

    <!--  Sidebar navigation colors  -->
    <color name="sidebar_background">@color/port_gore</color>
    <color name="sidebar_interaction_weak_norm">@color/pickled_bluewood</color>
    <color name="sidebar_interaction_weak_pressed">@color/rhino</color>
    <color name="sidebar_separator">@color/pickled_bluewood</color>
    <color name="sidebar_text_norm">@color/shade_0</color>
    <color name="sidebar_text_weak">@color/shade_60</color>
    <color name="sidebar_icon_norm">@color/shade_0</color>
    <color name="sidebar_icon_weak">@color/shade_60</color>
    <color name="sidebar_interaction_pressed">@color/san_marino</color>

    <!--
      ripple_norm is defined as proton_text_norm with 12% alpha and this is implemented by using
      a selector. Unfortunately using selectors in Material dialogs crashes the app, let's use a
      hardcoded color value until the bug is fixed.
      See: https://github.com/material-components/material-components-android/issues/2455
    -->
    <color name="ripple_norm_workaround">#1f17181C</color>

    <!-- Background for adaptive icons -->
    <color name="ic_logo_adaptive_background">#FFFFFF</color>
</resources>
