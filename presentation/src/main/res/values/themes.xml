<resources>

    <style name="ProtonTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/brand</item>
        <item name="colorPrimaryVariant">@color/brand_darker_20</item>
        <item name="colorOnPrimary">@color/brand_darker_40</item>
        <!-- secondary colors are not present in the designs, may be changed!! -->
        <item name="colorSecondary">@color/brand_darker_40</item>
        <item name="colorSecondaryVariant">@color/layout_background</item>
        <item name="colorSurface">@color/layout_background</item>
        <item name="colorOnSurface">@color/brand</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="colorOnBackground">@color/brand</item>
        <item name="colorError">@color/signal_error</item>
        <item name="colorOnError">@android:color/white</item>
        <item name="colorControlHighlight">@color/interaction_ripple</item>

        <item name="materialButtonStyle">@style/ProtonButton</item>
        <item name="android:textViewStyle">@style/ProtonTextView</item>
    </style>

    <style name="ProtonTheme.NoToolbar" parent="ProtonTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>
