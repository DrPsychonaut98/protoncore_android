<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ProtonThemeBase" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Material color attributes -->
        <item name="android:colorBackground">@color/background_norm</item>
        <item name="colorSurface">@color/background_norm</item>

        <item name="colorPrimary">?attr/brand_norm</item>
        <item name="colorPrimaryVariant">?brand_darken_20</item>
        <item name="colorSecondary">?colorPrimary</item>
        <item name="colorSecondaryVariant">?colorPrimaryVariant</item>
        <item name="colorError">@color/notification_error</item>

        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnPrimarySurface">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnSurface">@color/shade_100</item>
        <item name="colorOnBackground">@color/shade_100</item>

        <!-- Text colors -->
        <item name="android:textColor">@color/text_norm</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textColorPrimary">@color/text_norm</item>
        <item name="android:textColorPrimaryInverse">@color/text_inverted</item>
        <item name="android:textColorSecondary">@color/text_weak</item>
        <item name="android:textColorSecondaryInverse">@color/text_inverted</item>

        <!-- Edge-to-edge app content -->
        <item name="android:navigationBarColor">@color/nav_bar</item>

        <!-- Status bar and App bars -->
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:windowLightStatusBar">@bool/light_status_bar</item>
        <item name="appBarLayoutStyle">@style/ProtonAppBar</item>
        <item name="toolbarStyle">@style/ProtonToolbar</item>
        <item name="searchViewStyle">@style/ProtonSearchView</item>

        <!-- Tabs -->
        <item name="tabStyle">@style/ProtonTabStyle</item>

        <!-- Remap legacy AppCompat attributes to MaterialComponent attributes -->
        <item name="colorPrimaryDark">?colorPrimaryVariant</item>
        <item name="colorAccent">?colorSecondary</item>
        <item name="colorControlHighlight">?colorSecondary</item>

        <!-- Material styles override -->
        <item name="actionMenuTextColor">?attr/proton_text_accent</item>
        <item name="actionMenuTextAppearance">@style/Proton.Text.Default</item>
        <item name="linearProgressIndicatorStyle">@style/ProtonLinearProgressIndicator</item>
        <item name="materialAlertDialogTheme">@style/Proton.ThemeOverlay.AlertDialog</item>
        <item name="materialButtonStyle">@style/ProtonButton</item>
        <item name="materialButtonOutlinedStyle">@style/ProtonButton.OutlinedButton</item>
        <item name="navigationViewStyle">@style/ProtonNavigationView.Dark</item>
        <item name="radioButtonStyle">@style/ProtonRadioButton</item>
        <item name="snackbarStyle">@style/ProtonSnackbar</item>
        <item name="snackbarTextViewStyle">@style/ProtonSnackbarText</item>
        <item name="snackbarButtonStyle">@style/ProtonSnackbarButton</item>
        <item name="switchStyle">@style/ProtonSwitch</item>
        <item name="checkboxStyle">@style/ProtonCheckBox</item>
        <item name="textAppearanceButton">@style/ProtonButtonTextAppearance</item>

        <!-- Brand specific attributes -->
        <item name="brand_norm">@color/cornflower_blue</item>
        <item name="brand_darken_20">@color/san_marino</item>
        <item name="brand_darken_40">@color/chambray</item>
        <item name="brand_lighten_20">@color/portage</item>
        <item name="brand_lighten_40">@color/perano</item>

        <!-- App specific attributes (referencable in app) -->
        <item name="proton_text_norm">@color/text_norm</item>
        <item name="proton_text_weak">@color/text_weak</item>
        <item name="proton_text_hint">@color/text_hint</item>
        <item name="proton_text_disabled">@color/text_disabled</item>
        <item name="proton_text_inverted">@color/text_inverted</item>
        <item name="proton_icon_norm">@color/icon_norm</item>
        <item name="proton_icon_weak">@color/icon_weak</item>
        <item name="proton_icon_hint">@color/icon_hint</item>
        <item name="proton_icon_disabled">@color/icon_disabled</item>
        <item name="proton_icon_inverted">@color/icon_inverted</item>
        <item name="proton_interaction_weak">@color/interaction_weak</item>
        <item name="proton_interaction_weak_pressed">@color/interaction_weak_pressed</item>
        <item name="proton_interaction_weak_disabled">@color/interaction_weak_disabled</item>
        <item name="proton_interaction_strong">@color/interaction_strong</item>
        <item name="proton_interaction_strong_pressed">@color/interaction_strong_pressed</item>
        <item name="proton_interaction_norm">?attr/brand_norm</item>
        <item name="proton_interaction_norm_pressed">?attr/brand_darken_20</item>
        <item name="proton_interaction_norm_disabled">?attr/brand_lighten_40</item>
        <item name="proton_background_norm">@color/background_norm</item>
        <item name="proton_background_secondary">@color/background_secondary</item>
        <item name="proton_separator_norm">@color/separator_norm</item>
        <item name="proton_notification_norm">@color/notification_norm</item>
        <item name="proton_notification_error">@color/notification_error</item>
        <item name="proton_notification_success">@color/notification_success</item>
        <item name="proton_notification_warning">@color/notification_warning</item>
        <item name="proton_blender_norm">@color/blender_norm</item>
        <item name="proton_sidebar_background">@color/sidebar_background</item>
        <item name="proton_sidebar_interaction_weak_norm">@color/sidebar_interaction_weak_norm</item>
        <item name="proton_sidebar_interaction_weak_pressed">@color/sidebar_interaction_weak_pressed</item>
        <item name="proton_sidebar_separator">@color/sidebar_separator</item>
        <item name="proton_sidebar_text_norm">@color/sidebar_text_norm</item>
        <item name="proton_sidebar_text_weak">@color/sidebar_text_weak</item>
        <item name="proton_sidebar_icon_norm">@color/sidebar_icon_norm</item>
        <item name="proton_sidebar_icon_weak">@color/sidebar_icon_weak</item>
        <item name="proton_sidebar_interaction_pressed">@color/sidebar_interaction_pressed</item>

        <item name="outlinedButtonStyle">@style/ProtonButton.OutlinedButton</item>
        <!-- Tell MIUI Dark Mode to stop breaking our theming. -->
        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>
    </style>

    <style name="ProtonTheme" parent="ProtonThemeBase">
        <item name="proton_text_accent">?attr/brand_norm</item>
        <item name="proton_icon_accent">?attr/brand_norm</item>
    </style>

    <style name="ProtonTheme.Calendar" parent="ProtonTheme" />
    <style name="ProtonTheme.Drive" parent="ProtonTheme" />
    <style name="ProtonTheme.Mail" parent="ProtonTheme" />
    <style name="ProtonTheme.Vpn" parent="ProtonTheme">
        <item name="brand_norm">@color/fruit_salad</item>
        <item name="brand_darken_20">@color/goblin</item>
        <item name="brand_darken_40">@color/green_pea</item>
        <item name="brand_lighten_20">@color/mantis</item>
        <item name="brand_lighten_40">@color/fern</item>
    </style>

    <style name="ProtonTheme.Splash">
        <item name="android:statusBarColor">?proton_background_norm</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="brand_splash_logo">@drawable/splash_logo_mail</item>
        <item name="brand_splash_text">@drawable/splash_text_protonmail</item>
    </style>

    <style name="ProtonTheme.Splash.Mail">
        <item name="brand_splash_logo">@drawable/splash_logo_mail</item>
        <item name="brand_splash_text">@drawable/splash_text_protonmail</item>
    </style>

    <style name="ProtonTheme.Splash.Drive">
        <item name="brand_splash_logo">@drawable/splash_logo_drive</item>
        <item name="brand_splash_text">@drawable/splash_text_protondrive</item>
    </style>

    <style name="ProtonTheme.Splash.Calendar">
        <item name="brand_splash_logo">@drawable/splash_logo_calendar</item>
        <item name="brand_splash_text">@drawable/splash_text_protoncalendar</item>
    </style>

    <style name="ProtonTheme.Splash.Vpn">
        <item name="brand_splash_logo">@drawable/splash_logo_vpn</item>
        <item name="brand_splash_text">@drawable/splash_text_protonvpn</item>
    </style>

    <style name="ProtonTheme.Transparent">
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>
