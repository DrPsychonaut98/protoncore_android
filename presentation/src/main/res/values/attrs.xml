<resources>

    <declare-styleable name="AppTheme">
        <!-- Brand specific attributes -->
        <attr name="brand_norm" format="reference" />
        <attr name="brand_darken_40" format="reference" />
        <attr name="brand_darken_20" format="reference" />
        <attr name="brand_lighten_40" format="reference" />
        <attr name="brand_lighten_20" format="reference" />
        <attr name="brand_splash_logo" format="reference" />
        <attr name="brand_splash_text" format="reference" />

        <!-- App specific attributes -->
        <attr name="proton_text_norm" format="reference" />
        <attr name="proton_text_weak" format="reference" />
        <attr name="proton_text_hint" format="reference" />
        <attr name="proton_text_disabled" format="reference" />
        <attr name="proton_text_inverted" format="reference" />
        <attr name="proton_icon_norm" format="reference" />
        <attr name="proton_icon_weak" format="reference" />
        <attr name="proton_icon_hint" format="reference" />
        <attr name="proton_icon_disabled" format="reference" />
        <attr name="proton_icon_inverted" format="reference" />
        <attr name="proton_interaction_weak" format="reference" />
        <attr name="proton_interaction_weak_pressed" format="reference" />
        <attr name="proton_interaction_weak_disabled" format="reference" />
        <attr name="proton_interaction_strong" format="reference" />
        <attr name="proton_interaction_strong_pressed" format="reference" />
        <attr name="proton_interaction_norm" format="reference" />
        <attr name="proton_interaction_norm_pressed" format="reference" />
        <attr name="proton_interaction_norm_disabled" format="reference" />
        <attr name="proton_background_norm" format="reference" />
        <attr name="proton_background_secondary" format="reference" />
        <attr name="proton_separator_norm" format="reference" />
        <attr name="proton_notification_error" format="reference" />
        <attr name="proton_notification_success" format="reference" />
        <attr name="proton_notification_warning" format="reference" />
    </declare-styleable>

    <declare-styleable name="ProtonProgressButton">
        <!-- Whether the loading state must be set on click. Default is true -->
        <attr name="autoLoading" format="boolean" />
        <attr name="initialState" format="enum">
            <enum name="idle" value="0" />
            <enum name="loading" value="1" />
        </attr>
        <!-- This must be an animated drawable -->
        <attr name="progressDrawable" format="reference" />
    </declare-styleable>

    <declare-styleable name="ProtonInput">
        <attr name="android:text" />
        <attr name="android:hint" />
        <attr name="android:inputType" />
        <attr name="android:enabled" />
        <attr name="android:minLines" />
        <attr name="label" format="string" />
        <attr name="help" format="string" />
        <attr name="suffix" format="string" />
        <attr name="prefix" format="string" />
        <attr name="actionMode" format="enum">
            <enum name="none" value="0" />
            <enum name="clear_text" value="1" />
            <enum name="password_toggle" value="2" />
            <enum name="custom_icon" value="3" />
        </attr>
        <attr name="endIconDrawable" format="reference" />
    </declare-styleable>

    <declare-styleable name="ProtonAutoCompleteInput">
        <attr name="android:text" />
        <attr name="android:hint" />
        <attr name="android:inputType" />
        <attr name="android:enabled" />
        <attr name="label" />
        <attr name="help" />
        <attr name="suffix" />
        <attr name="prefix" />
    </declare-styleable>

</resources>
