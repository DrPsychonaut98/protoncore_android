<!-- TODO update to Android 6 min supported version to support new styles -->
<resources>

    <style name="ProtonTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/text_default</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ProtonTextView.InputHeader">
        <item name="android:textColor">@drawable/selector_input_header_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProtonTextView.InputFooter">
        <item name="android:textColor">@drawable/selector_input_footer_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ProtonEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textColorHint">@color/text_weak</item>
        <item name="android:textSize">@dimen/input_text_size</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="ProtonEditText.Border" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@drawable/selector_input_color</item>
        <item name="android:textColorHint">@drawable/selector_input_hint_color</item>
        <item name="android:textSize">@dimen/input_text_size</item>
        <item name="android:background">@drawable/selector_default_edit_text_background</item>
    </style>

    <style name="ProtonEditText.Border.Disabled">
        <item name="android:background">@drawable/default_edit_text_disabled</item>
    </style>

    <style name="ProtonButton" parent="Widget.MaterialComponents.Button">
        <!-- insets top and bottom (default 6dp) make the button appear much smaller. Thus, set to
         0dp to keep consistent dimensions according to the design guidelines. -->
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="backgroundTint">@color/selector_default_button_background</item>
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="ProtonButton.Box.Borderless" parent="ProtonButton">
        <item name="boxStrokeColor">@null</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="ProtonButton.Borderless" parent="Widget.MaterialComponents.Button.TextButton">
        <!-- insets top and bottom (default 6dp) make the button appear much smaller. Thus, set to
         0dp to keep consistent dimensions according to the design guidelines. -->
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/selector_borderless_button_foreground</item>
        <item name="backgroundTint">@color/selector_borderless_button_background</item>
    </style>

    <style name="ProtonButton.Borderless.Text" parent="ProtonButton.Borderless">
        <item name="android:textColor">@color/selector_borderless_button_foreground</item>
        <item name="textAllCaps">false</item>
        <item name="drawableTint">@color/brand</item>
    </style>

    <style name="ProtonDialog.Picker" parent="Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/layout_light</item>
    </style>

</resources>
