<!-- TODO update to Android 6 min supported version to support new styles -->
<resources>

    <style name="ProtonTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/text_default</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ProtonEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textColorHint">@color/text_light</item>
        <item name="android:textSize">@dimen/h5</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="ProtonEditText.Border" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/text_default</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="android:textSize">@dimen/h4</item>
        <item name="android:background">@drawable/default_edit_text</item>
    </style>

    <style name="ProtonEditText.Border.Disabled">
        <item name="android:background">@drawable/default_edit_text_disabled</item>
    </style>

    <style name="ProtonButton" parent="Widget.MaterialComponents.Button" />

    <style name="ProtonButton.Default" parent="Widget.AppCompat.Button" />

    <style name="ProtonButton.Borderless.Layout" parent="ProtonButton.Default">
        <item name="boxStrokeColor">@null</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="ProtonButton.Borderless" parent="ProtonButton.Default">
        <item name="android:textColor">@drawable/selector_borderless_button_foreground</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ProtonButton.Action" parent="ProtonButton.Default">
        <item name="android:textColor">@color/text_light</item>
        <item name="android:background">@drawable/selector_action_button_background</item>
    </style>

    <style name="ProtonTheme.Dialog.Picker" parent="Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/layout_light</item>
    </style>
</resources>
